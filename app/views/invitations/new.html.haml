%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, class: "invite" do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .row
            .col-sm-4
              = f.text_field :recipient_name, label: "Friend's Name", class: "form-control"
          .row
            .col-sm-4
              = f.text_field :recipient_email, label: "Friend's Email", class: "form-control"
          .row
            .col-sm-6
              = f.text_area :message, class: "form-control", rows: 6, label: "Invitation Message", placeholder: "Please join this really cool site"
        %fieldset.form-group.action
          %input(type="submit" value="Send Invitation" class="btn btn-default")
